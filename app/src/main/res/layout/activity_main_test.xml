<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.main.FakeMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ListView
                android:id="@+id/songListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
            <TextView
                android:id="@+id/noSongTv1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="没找到歌曲"
                android:gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.hahaha.musicplayer.widget.Pause_PlayView
                    android:id="@+id/p_pView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    app:ppColor="#336600"
                    />

                <com.example.hahaha.musicplayer.widget.LoopView
                    android:id="@+id/loopVIew"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    app:LoopColor="#336600"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/p_pView"
                    android:layout_marginLeft="30dp"
                    />
                <com.example.hahaha.musicplayer.widget.ScrollTextView
                    android:id="@+id/songTv"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/noSongTv2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/frontPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>

</FrameLayout>
